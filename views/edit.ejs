<%- include("partials/header.ejs") %>

<% if (locals.post) { %>
    <h1 class="post-form-h1">Edit your post</h1>
    <form class="post-form" action="/edit_post?id=<%=post.id%>" method="post">
        <label for="image-url">Image URL</label>
        <input type="text" id="image-url" name="image-url" value=<%=post.image%> required>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" value="<%=post.title%>" required>
        <label for="post-body">Body</label>
        <textarea id="post-body" name="post-body" rows="15" cols="100" required><%=post.body%></textarea>
        <input type="submit" class="submit-post" name="edit-post" value="Submit Changes">
    </form>
<% } else { %>
    <h1 class="post-form-h1">Create a new post</h1>
    <form class="post-form" action="/create" method="post">
        <label for="image-url">Image URL</label>
        <input type="text" id="image-url" name="image-url" required>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" required>
        <label for="post-body">Body</label>
        <textarea id="post-body" name="post-body" rows="15" cols="100" required></textarea>
        <input type="submit" class="submit-post" name="create" value="Post">
    </form>
<% } %>


